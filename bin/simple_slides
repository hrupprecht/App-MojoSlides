 #!/usr/bin/env perl

use strict;
use warnings;

use FindBin;
BEGIN { unshift @INC, "$FindBin::Bin/../lib" }

if (@ARGV and -e $ARGV[0]) {
  $ENV{SIMPLE_SLIDES_PRESENTATION} = shift;
}

# Start command line interface for application
require Mojolicious::Commands;
Mojolicious::Commands->start_app('App::SimpleSlides');

